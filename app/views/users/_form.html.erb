<div class="depot_form">

<%= form_for(@user) do |f| %>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> сведения об этом пользователе не могут быть сохранены:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Введите сведения о пользователе</legend>

  <div class="field">
    <%= f.label :name %></br>
    <%= f.text_field :name, size: 40 %>
  </div>

  <div class='field'>
    <%= f.label :old_password %></br>
    <%= password_field_tag :old_password, params[:old_password], size: 40 %>
  </div>
  <div class="field">
    <%= f.label :password %></br>
    <%= f.password_field :password, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation, size: 40 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</fieldset>

<% end %>
</div>
